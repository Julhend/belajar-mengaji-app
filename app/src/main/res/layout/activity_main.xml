           android:layout_centerHorizontal="true" />

       />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/textView11"/>
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/exit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/back"/>
    <ImageButton
        android:layout_width="230dp"
        android:layout_height="67dp"
        android:id="@+id/button_belajar"
        android:background="@drawable/b_belajar"
        android:layout_above="@+id/button_quiz"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="230dp"
        android:layout_height="65dp"
        android:id="@+id/button_quiz"
        android:layout_marginTop="5dp"
        android:background="@drawable/b_kuis"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/button_belajar"
        android:layout_alignStart="@+id/button_belajar" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="664dp"
        android:layout_height="107dp"
        android:layout_above="@+id/button_belajar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-1dp"
        android:background="@drawable/logo" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/admob_publisher_id"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
